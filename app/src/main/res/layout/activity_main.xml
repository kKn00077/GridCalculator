<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="kn0077.kr.hs.emirim.gridcalculator.MainActivity"
    android:weightSum="1">

    <EditText
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="2">

        <Button
            android:id="@+id/but1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="0"
            />
        <Button
            android:id="@+id/but2"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:text="1"
            />
        <Button
            android:id="@+id/but3"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:text="2"
            />
        <Button
            android:id="@+id/but4"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:text="3"
            />
        <Button
            android:id="@+id/but5"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:text="4"
            />

        <Button
            android:id="@+id/but6"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:text="5"
            />
        <Button
            android:id="@+id/but7"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="6"
            />
        <Button
            android:id="@+id/but8"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:text="7"
            />
        <Button
            android:id="@+id/but9"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:text="8"
            />
        <Button
            android:id="@+id/but10"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:text="9"
            />

    </GridLayout>

    <Button
        android:id="@+id/op1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="더하기"/>
    <Button
        android:id="@+id/op2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="빼기"/>
    <Button
        android:id="@+id/op3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="곱하기"/>
    <Button
        android:id="@+id/op4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="나누기"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:textSize="30dp"/>

</LinearLayout>
